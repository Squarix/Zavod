<Page x:Class="Zavod.View.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zavod.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">
    <Grid>
        <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="SIGN UP" FontSize="24" Margin="0,0,25,0" FontFamily="Arial"
                    Background="{x:Null}" Foreground="White" Style="{StaticResource ButtonHover}"/>
            <Button Grid.Column="1" Content="SIGN IN" FontSize="24" Margin="25,0,0,0" FontFamily="Arial" 
                    Background="{x:Null}" Command="{Binding SwitchSignIn}" Foreground="White" Style="{StaticResource ButtonHover}"/>
        </Grid>
    </Grid>
</Page>
